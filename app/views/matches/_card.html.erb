<div class="card mb-3">
  <h2 class="card-header h4">
    Match #<%= match.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Player</dt>
      <dd>
        <% if @match.player.present? %>
          <%= link_to match.player, match.player %>
        <% end %>
      </dd>

      <dt>Opponent</dt>
      <dd>
        <% if @match.opponent.present? %>
          <%= link_to match.opponent, match.opponent %>
        <% end %>
      </dd>

      <dt>Date</dt>
      <dd><%= match.date %></dd>

      <dt>Time</dt>
      <dd><%= match.time %></dd>

      <dt>Court</dt>
      <dd>
        <% if @match.court.present? %>
          <%= link_to match.court, match.court %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back match, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_match_url(match), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to match, method: :delete, data: { confirm: "Do you really want to delete this match?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(match.updated_at) %> ago
  </div>
</div>
