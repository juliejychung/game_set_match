<%= search_form_for @q, :class => collapse_search_form, :id => "users_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :first_name_cont, "First name contains" %>
    <%= f.text_field :first_name_cont, :class => "form-control", :placeholder => "First name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :cost_per_hour, "Cost per hour" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :cost_per_hour_gteq, :class => "form-control", :placeholder => "Cost per hour greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :cost_per_hour_lteq, :class => "form-control", :placeholder => "Cost per hour less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :coach_eq, "Coach" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :coach_eq, "1", checked: ((params[:q] && params[:q][:coach_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :coach_eq, "0", checked: ((params[:q] && params[:q][:coach_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :coach_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :age, "Age" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :age_gteq, :class => "form-control", :placeholder => "Age greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :age_lteq, :class => "form-control", :placeholder => "Age less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :gender_cont, "Gender contains" %>
    <%= f.text_field :gender_cont, :class => "form-control", :placeholder => "Gender contains" %>
  </div>

  <div class="form-group">
    <%= f.label :level_cont, "Level contains" %>
    <%= f.text_field :level_cont, :class => "form-control", :placeholder => "Level contains" %>
  </div>

  <div class="form-group">
    <%= f.label :email_cont, "Email contains" %>
    <%= f.text_field :email_cont, :class => "form-control", :placeholder => "Email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :neighborhood_cont, "Neighborhood contains" %>
    <%= f.text_field :neighborhood_cont, :class => "form-control", :placeholder => "Neighborhood contains" %>
  </div>

  <div class="form-group">
    <%= f.label :city_cont, "City contains" %>
    <%= f.text_field :city_cont, :class => "form-control", :placeholder => "City contains" %>
  </div>

  <div class="form-group">
    <%= f.label :state_cont, "State contains" %>
    <%= f.text_field :state_cont, :class => "form-control", :placeholder => "State contains" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name_cont, "Last name contains" %>
    <%= f.text_field :last_name_cont, :class => "form-control", :placeholder => "Last name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :comments_body_cont, "Comments body contains" %>
    <%= f.text_field :comments_body_cont, :class => "form-control", :placeholder => "Comments body contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/users" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#users_filters">
  Show filters
</a>
