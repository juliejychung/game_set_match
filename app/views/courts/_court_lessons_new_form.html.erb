<%= form_with(model: @lesson, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :coach_id %>

    <%= f.collection_select :coach_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :player_id %>

    <%= f.collection_select :player_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>

    <%= f.date_select :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :time %>

    <%= f.date_select :time, class: "form-control" %>
  </div>

  <%= f.hidden_field :court_id, value: @court.id %>

  <%= f.submit "Create lesson", class: "btn btn-block btn-outline-secondary" %>
<% end %>
