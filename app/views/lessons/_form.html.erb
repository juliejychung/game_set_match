<% was_validated = lesson.errors.any? %>

<%= form_with(model: lesson, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% coach_class = "form-control" %>
    <% coach_was_invalid = lesson.errors.include?(:coach) %>

    <% if was_validated %>
      <% if coach_was_invalid %>
        <% coach_class << " is-invalid" %>
      <% else %>
        <% coach_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :coach_id %>
    <%= f.collection_select :coach_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if coach_was_invalid %>
      <% lesson.errors.full_messages_for(:coach).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% player_class = "form-control" %>
    <% player_was_invalid = lesson.errors.include?(:player) %>

    <% if was_validated %>
      <% if player_was_invalid %>
        <% player_class << " is-invalid" %>
      <% else %>
        <% player_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :player_id %>
    <%= f.collection_select :player_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if player_was_invalid %>
      <% lesson.errors.full_messages_for(:player).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% date_class = "form-control" %>
    <% date_was_invalid = lesson.errors.include?(:date) %>

    <% if was_validated %>
      <% if date_was_invalid %>
        <% date_class << " is-invalid" %>
      <% else %>
        <% date_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :date %>
    <%= f.date_select :date, class: date_class, placeholder: "Enter date" %>
    <% if date_was_invalid %>
      <% lesson.errors.full_messages_for(:date).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% time_class = "form-control" %>
    <% time_was_invalid = lesson.errors.include?(:time) %>

    <% if was_validated %>
      <% if time_was_invalid %>
        <% time_class << " is-invalid" %>
      <% else %>
        <% time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :time %>
    <%= f.time_select :time, class: time_class, placeholder: "Enter time" %>
    <% if time_was_invalid %>
      <% lesson.errors.full_messages_for(:time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% court_class = "form-control" %>
    <% court_was_invalid = lesson.errors.include?(:court) %>

    <% if was_validated %>
      <% if court_was_invalid %>
        <% court_class << " is-invalid" %>
      <% else %>
        <% court_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :court_id %>
    <%= f.collection_select :court_id, Court.all, :id, :to_s, {}, class: "form-control" %>
    <% if court_was_invalid %>
      <% lesson.errors.full_messages_for(:court).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
