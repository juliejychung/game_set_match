<div class="card mb-3">
  <h2 class="card-header h4">
    Lesson #<%= lesson.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Coach</dt>
      <dd>
        <% if @lesson.coach.present? %>
          <%= link_to lesson.coach, lesson.coach %>
        <% end %>
      </dd>

      <dt>Player</dt>
      <dd>
        <% if @lesson.player.present? %>
          <%= link_to lesson.player, lesson.player %>
        <% end %>
      </dd>

      <dt>Date</dt>
      <dd><%= lesson.date %></dd>

      <dt>Time</dt>
      <dd><%= lesson.time %></dd>

      <dt>Court</dt>
      <dd>
        <% if @lesson.court.present? %>
          <%= link_to lesson.court, lesson.court %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back lesson, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_lesson_url(lesson), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to lesson, method: :delete, data: { confirm: "Do you really want to delete this lesson?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(lesson.updated_at) %> ago
  </div>
</div>
